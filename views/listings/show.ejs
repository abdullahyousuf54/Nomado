<% layout("/layouts/boilerplate") %>

    
   <div class="row mt-3">
    <div class="col-8 offset-4">
        <h3> <%= listings.title %> </h3>
    </div>

    <div class="col-6 offset-3 mt-2 show-card listing-card">

        <img src="<%= listings.image.url %>" class="card-img-top show-img" alt="Listing image">
        <br> <br>
        <div class="card-body">
            <p class="card-text">Owned by  <i> <%= listings.owner.username %> </i> </p>
          <p class="card-text"><%= listings.description %> </p>
          <p class="card-text">&#8377 <%= listings.price.toLocaleString("en-IN") %> </p>
          <p class="card-text"><%= listings.location %>  </p>
          <p class="card-text"><%= listings.country  %>   </p>
        </div>
        <br>

        <% if( currUser && currUser._id.equals(listings.owner._id)) { %>

        <div class="btns mt-2 d-flex justify-content-center align-items-center gap-2">
            <a href="/listings/<%= listings._id %>/edit" class="btn new-btn">Edit this listing</a>
            <form method="POST" action="/listings/<%= listings._id %>?_method=DELETE" style="margin: 0;">
              <button class="btn btn-dark">Delete</button>
            </form>
          </div>
          
        <% } %>

    
    <br><br>

<hr>

<div class="col-9 offset-3 mb-3">
    <% if(currUser) { %>
    <h4> Leave a Review</h4>
    <form action="/listings/<%= listings._id %>/reviews" method="post" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" name="review[rating]" class="form-range" >
        </div>
        <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Leave a comment</label>
            <textarea name="review[comment]" id="comment" class="form-control" cols="30" rows="5" required></textarea>
            <div class="invalid-feedback">Please add some comment befrore submitting</div>
        </div>
        <br><br>
        <button class="btn btn-outline-dark offset-5">Submit</button>
    </form>
    <% } %>
    <br><br>
    <p><b>All reviews</b> </p>
    <div class="row">
    <% for( review of listings.reviews){ %>
    <div class="card col-6 ms-3 mb-3">
        <div class="card-body">
            <h5 class="card-title"> @<%= review.author.username %> </h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %> stars</p>
            <form action="/listings/<%= listings._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mb-3">
                <button class="btn btn-dark btn-sm">Delete</button>
            </form>
        </div>    
    </div>
    <% } %>
</div>
</div>
</div>


 