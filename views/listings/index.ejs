<% layout("/layouts/boilerplate") %>
<body>
  <h1 class="playfair-display-title fs-1 text-center">All Listings</h1>

  <div class="row row-cols-1 row-cols-lg-3 g-4">
    <% for (let listing of allListings) { %>
      <div class="col">
        <div class="card listing-card h-100">
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <h5 class="card-title playfair-display-title fw-normal"><%= listing.title %></h5>
              <p class="card-text">&#8377 <%= listing.price.toLocaleString("en-IN") %></p>
            </div>
          </a>
        </div>
      </div>
    <% } %>
  </div>
</body>
